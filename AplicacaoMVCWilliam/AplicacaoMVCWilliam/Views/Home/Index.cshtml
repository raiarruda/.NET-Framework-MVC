@{
    ViewBag.Title = "Home Page";
}
@using AplicacaoMVCWilliam.Models;

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">
            </ul>

        </nav>
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <a href="@Url.Action("Form", "Pessoa")" class="btn btn-primary mb-3">Cadastro de pessoas</a>

            @if (ViewBag.mensagem != null && ViewBag.mensagem != "")
            {
                <script>
                    // Após uma operação bem-sucedida
                    Swal.fire({
                      title: 'Uhull!',
                      text: '@ViewBag.mensagem',
                      icon: 'success',
                      confirmButtonText: 'OK'
                    })
                </script>
            }

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>CPF</th>
                                    <th>Telefone</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Pessoa pessoa in ViewBag.pessoas)
                                {
                                    <tr>
                                        <td>@pessoa.Nome</td>
                                        <td>@pessoa.CPF</td>
                                        <td>@pessoa.Telefone</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Exercício 2023</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->